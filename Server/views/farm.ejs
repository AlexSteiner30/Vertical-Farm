<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Vertical H-Farm</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link href="../assets/img/logo.svg" rel="icon">

  <!-- Google Fonts -->
  <link href="https://fonts.gstatic.com" rel="preconnect">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="../assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="../assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="../assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="../assets/vendor/quill/quill.snow.css" rel="stylesheet">
  <link href="../assets/vendor/quill/quill.bubble.css" rel="stylesheet">
  <link href="../assets/vendor/remixicon/remixicon.css" rel="stylesheet">
  <link href="../assets/vendor/simple-datatables/style.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="../assets/css/style.css" rel="stylesheet">

  <!-- =======================================================
  * Template Name: NiceAdmin
  * Template URL: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/
  * Updated: Apr 20 2024 with Bootstrap v5.3.3
  * Author: BootstrapMade.com
  * License: https://bootstrapmade.com/license/
  ======================================================== -->
</head>

<body>

  <!-- ======= Header ======= -->
  <header id="header" class="header fixed-top d-flex align-items-center">

    <div class="d-flex align-items-center justify-content-between">
      <a href="/" class="logo d-flex align-items-center">
        <img src="../assets/img/logo.png" alt="">
        <span class="d-none d-lg-block">Vertical H-Farm</span>
      </a>
      <i class="bi bi-list toggle-sidebar-btn"></i>
    </div><!-- End Logo -->

  </header><!-- End Header -->

  <!-- ======= Sidebar ======= -->
  <aside id="sidebar" class="sidebar">

    <ul class="sidebar-nav" id="sidebar-nav">

      <li class="nav-item">
        <a class="nav-link collapsed" href="/">
          <i class="bi bi-grid"></i>
          <span>Dashboard</span>
        </a>
      </li><!-- End Dashboard Nav -->

      <li class="nav-item">
        <a class="nav-link collapsed" data-bs-target="#components-nav" data-bs-toggle="collapse" href="#">
          <i class="bi bi-menu-button-wide"></i><span>Farms</span><i class="bi bi-chevron-down ms-auto"></i>
        </a>
        <ul id="components-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
          <% for(var i=0; i < farms.length; i++) { %>
            <li>
              <a href="/farm/<%=farms[i]._id%>">
                <i class="bi bi-circle"></i><span><%=farms[i].name%></span>
              </a>
            </li>
          <% } %>
        </ul>
      </li><!-- End Components Nav -->

  </aside><!-- End Sidebar-->

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Farm</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item">Farms</li>
          <li class="breadcrumb-item active"><%=farm_name%></li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
      <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-12">
          <div class="row">

            <!-- Sales Card -->
            <div class="col-xxl-3 col-md-5">
              <div class="card info-card sales-card">
                <div class="card-body">
                  <h5 class="card-title">Soil Humidity</span></h5>

                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-wind"></i>
                    </div>
                    <div class="ps-3">
                      <h6><%=data.soilHum1%> - <%=data.soilHum2%></h6>
                    </div>
                  </div>
                </div>

              </div>
            </div><!-- End Sales Card -->

            <!-- Revenue Card -->
            <div class="col-xxl-3 col-md-5">
              <div class="card info-card revenue-card">

                <div class="card-body">
                  <h5 class="card-title">Air Humidity</h5>

                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-moisture"></i>
                    </div>
                    <div class="ps-3">
                      <h6><%=data.airHum%></h6>
                    </div>
                  </div>
                </div>

              </div>
            </div><!-- End Revenue Card -->

            <!-- Customers Card -->
            <div class="col-xxl-3 col-xl-5">

              <div class="card info-card customers-card">
                <div class="card-body">
                  <h5 class="card-title">Air Temperature</span></h5>

                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-thermometer-half"></i>
                    </div>
                    <div class="ps-3">
                      <h6><%=data.airTemp%></h6>
                    </div>
                  </div>

                </div>
              </div>

            </div><!-- End Customers Card -->

            <!-- Customers Card -->
            <div class="col-xxl-3 col-xl-5">

              <div class="card info-card sales-card">
                <div class="card-body">
                  <h5 class="card-title">Light</span></h5>

                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi-lightbulb"></i>
                    </div>
                    <div class="ps-3">
                      <h6><%=data.light%></h6>
                    </div>
                  </div>

                </div>
              </div>

            </div><!-- End Customers Card -->

      </div>
    </section>

    <div class="card">
            <div class="card-body">
              <h5 class="card-title">Camera</h5>

              <!-- Floating Labels Form -->
              <form class="row g-3">
                <div class="col-md-12">
                  <div class="form-floating" id="container">
                    <% if(isOnline){ %>
                      <div><img id="stream" src="http://<%=camera_ip%>:81/stream%>" crossorigin="" style="border-radius: 20px; width: 40%;"></div>
                    <%}else{%>
                      <h6>Farm is not connected!</h6>
                    <%}%>
                  </div>
                </div>
              </form><!-- End floating Labels Form -->

            </div>
          </div>

          <div class="col-xxl-12 col-xl-12">

            <div class="card info-card customers-card">
              <div class="card-body">
                <h5 class="card-title">Fans</span></h5>

                <div class="d-flex align-items-center">
                  <button onclick="fans()" type="submit" class="btn btn-primary">Disable / Enable</button>
              </div>
            </div>

          </div><!-- End Customers Card -->

          <div class="col-xxl-12 col-xl-12">
            <div class="card info-card customers-card">
              <div class="card-body">
                <h5 class="card-title">Water Pump</span></h5>

                <div class="d-flex align-items-center">
                  <button onclick="motor()" type="submit" class="btn btn-primary">Disable / Enable</button>
              </div>
            </div>

          </div><!-- End Customers Card -->
    

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Details</h5>

              <!-- Floating Labels Form -->
              <form class="row g-3" method="post" action="/farm/<%=id%>/update">
                <div class="col-md-3">
                  <div class="form-floating">
                    <input type="text" class="form-control" id="floatingName" placeholder="Test" name="farmName">
                    <label for="floatingName">Farm Name: <b><%=name%></b></label>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-floating">
                    <input type="text" class="form-control" id="floatingName" placeholder="Test" name="id" disabled>
                    <label for="floatingName">ID: <b><%=id%></b></label>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-floating">
                    <input type="text" class="form-control" id="floatingName" placeholder="Test" disabled>
                    <label for="floatingName">IP Address: <b><%=ip%></b></label>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-floating">
                    <input type="email" class="form-control" id="floatingEmail" placeholder="SSID" disabled>
                    <label for="floatingEmail">SSID: <b><%=ssid%></b></label>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-floating">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password" disabled>
                    <label for="floatingPassword">Password: <b><%=password%></b></label>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-floating mb-3">
                    <select class="form-select" id="floatingSelect" aria-label="State" name="plantType">
                      <option value="Potatoes" <%= plantType == "Potatoes" ? "selected" : "" %>>Potatoes</option>
                      <option value="Strawberries" <%= plantType == "Strawberries" ? "selected" : "" %>>Strawberries</option>
                      <option value="Cherries" <%= plantType == "Cherries" ? "selected" : "" %>>Cherries</option>
                      <option value="Tomatoes" <%= plantType == "Tomatoes" ? "selected" : "" %>>Tomatoes</option>
                      <option value="Others" <%= plantType == "Others" ? "selected" : "" %>>Others</option>                      
                    </select>
                    <label for="floatingSelect">Plant Type: <b><%=plantType%></b></label>
                  </div>
                </div>
                <div class="col-md-2">
                  <div class="form-floating">
                    <input type="number" class="form-control" id="floatingZip" placeholder="Zip" name="soilHum">
                    <label for="floatingZip">Soil Humidity: <b><%=soilHum%></b></label>
                  </div>
                </div>
                <div class="col-md-2">
                  <div class="form-floating">
                    <input type="number" class="form-control" id="floatingZip" placeholder="Zip" name="airTemp">
                    <label for="floatingZip">Air Degrees: <b><%=airTemp%></b></label>
                  </div>
                </div>
                <div class="col-md-2">
                  <div class="form-floating">
                    <input type="number" class="form-control" id="floatingZip" placeholder="Zip" name="airHum">
                    <label for="floatingZip">Air Humidity: <b><%=airHum%></b></label>
                  </div>
                </div>
                <div class="col-md-2">
                  <div class="form-floating">
                    <input type="number" class="form-control" id="floatingZip" placeholder="Zip" name="light">
                    <label for="floatingZip">Light: <b><%=light%></b></label>
                  </div>
                </div>
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form><!-- End floating Labels Form -->

            </div>
          </div>


  </main><!-- End #main -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="../assets/vendor/apexcharts/apexcharts.min.js"></script>
  <script src="../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="../assets/vendor/chart.js/chart.umd.js"></script>
  <script src="../assets/vendor/echarts/echarts.min.js"></script>
  <script src="../assets/vendor/quill/quill.js"></script>
  <script src="../assets/vendor/simple-datatables/simple-datatables.js"></script>
  <script src="../assets/vendor/tinymce/tinymce.min.js"></script>
  <script src="../assets/vendor/php-email-form/validate.js"></script>

  <!-- Template Main JS File -->
  <script src="../assets/js/main.js"></script>
  <script>
    async function fans(){
      alert("Fans were disabled/enabled");
      await fetch("http://<%=ip%>:80/fans");
    }

    async function motor(){
      alert("Water pump was disabled/enabled");
      await fetch("http://<%=ip%>:80/motor");
    }

    function rotatePhoto() {
      var img = document.getElementById("stream");
      var deg = 90;
      if(isOdd(deg/90)){ document.getElementById("container").style.marginBottom = "10%"; }
      else{ document.getElementById("container").style.marginBottom = "0%" }
      img.style.transform = "rotate(" + deg + "deg)";
    }
    function isOdd(n) { return Math.abs(n % 2) == 1; }
  </script>
</body>

</html>